<h1>Review</h1>

<%= flash[:notice] %>
<table>
	<thead>
		<th>UserName</th>
		<th>Title</th>
		<th>description</th>
		<th>Stars</th>
		<th>Review</th>
	</thead>
	<tbody>
		<% @reviews.each do |review| %>
			<tr>
				<td><%= review.user.username %></td>
				<td><%= review.movie.title %></td>
        <td><%= review.movie.description %></td>
				<td><%= review.stars %></td>
				<td><%= review.review %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<div>



<%= form_tag review_index_path, :method => 'get' do =%>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


  </div>
